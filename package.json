{
  "name": "fe-navigation",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "npm run ci && vue-cli-service serve",
    "build": "npm run ci && vue-cli-service build",
    "lint": "vue-cli-service lint",
    "ci": "npm run format:json && npm run generate:json",
    "generate:json": "node ./scripts/generateJson.js",
    "format:json": "node ./scripts/formatJson.js",
    "watch": "nodemon ./scripts/generateJson.js",
    "upload": "node ./scripts/upload.js"
  },
  "dependencies": {
    "core-js": "^2.6.5",
    "register-service-worker": "^1.6.2",
    "vue": "^2.6.10",
    "vue-router": "^3.0.3",
    "vuex": "^3.1.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.12.0",
    "@vue/cli-plugin-eslint": "^3.12.0",
    "@vue/cli-plugin-pwa": "^3.12.0",
    "@vue/cli-service": "^3.12.0",
    "@vue/eslint-config-standard": "^4.0.0",
    "babel-eslint": "^10.0.1",
    "chalk": "^2.4.2",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "glob": "^7.1.4",
    "json-format": "^1.0.1",
    "lint-staged": "^8.1.5",
    "node-sass": "^4.13.1",
    "nodemon": "^1.19.4",
    "qcloud-upload": "^1.5.0",
    "sass-loader": "^8.0.0",
    "vue-template-compiler": "^2.6.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/standard"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "npm run format:json",
      "git add"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/*",
      "src/*"
    ],
    "watch": [
      "jsondata/data/*.json"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "json",
    "delay": "1000"
  }
}
